# Alpha Copilot Social Agent Configuration

# Alpha Copilot Backend API
ALPHA_COPILOT_API_URL=https://your-backend.railway.app

# Authentication Option 1: Supabase (Recommended - same as frontend)
# Create a service account in Supabase for automated access
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_EMAIL=service-account@example.com
SUPABASE_PASSWORD=your_secure_password

# Authentication Option 2: Static API Key (Legacy)
# Only used if Supabase credentials are not configured
ALPHA_COPILOT_API_KEY=your_alpha_copilot_api_key

# LLM Configuration
GEMINI_API_KEY=your_gemini_api_key
LLM_MODEL=gemini-2.0-flash
LLM_TIMEOUT=60

# Twitter/X Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Threads Credentials (Meta Graph API)
# Get these from Meta Developer Portal: https://developers.facebook.com/
THREADS_ACCESS_TOKEN=your_threads_access_token
THREADS_USER_ID=your_threads_user_id

# Alpha Copilot Promotional Settings
ALPHA_COPILOT_URL=https://alphacopilot.ai
ENABLE_PROMO_POST=true

# Agent Settings
MAX_ITERATIONS=10
DRY_RUN=true

# Evaluation Settings (optional)
# Minimum scores required for posts to pass quality gate
EVAL_HOOKINESS_MIN=15  # Minimum hookiness score (1-25, default: 15 = 60%)
EVAL_QUALITY_MIN=30    # Minimum quality score (1-50, default: 30 = 60%)
EVAL_TOTAL_MIN=45      # Minimum total score (1-75, default: 45 = 60%)
EVAL_MODE=both         # Evaluation mode: hookiness, quality, or both
